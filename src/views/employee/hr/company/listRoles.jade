extends /templates/authLayout
block head
  title List Roles
  script(type='text/javascript').
    var LIST_URL = '/rest/hr/getRoleList'
  script(src="/javascript/hrsystem/apps/hr/list.js")
block breadcrumbs
  ol.breadcrumb
    li
      a(href="/c/#{company.companyId}/a/home") Home
    li
      a(href="/c/#{company.companyId}/hr/hrHome") HR
    li.active List Roles  
block content
  .container(ng-app="list",ng-controller="listCtrl" ng-cloak)
    a.btn.btn-primary.marginBottom10(href="/c/#{company.companyId}/hr/updateRole") Add Role
    .table-responsive
      table.table.table-bordered.table-hover
        tr.info
          th.col-sm-2
            div Role Name
          th.col-sm-4
            div Role Description
        tr(ng-repeat="listObj in lists")
          td
            a(href="/c/#{company.companyId}/id/{{listObj.roleId}}/hr/updateRole") {{listObj.roleName}} 
          td
            div {{listObj.roleDescr}} 
    
                   
