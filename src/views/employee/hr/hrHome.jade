extends /templates/authLayout
block head
  title HR Home
block breadcrumbs
  ol.breadcrumb
    li
      a(href="/c/#{company.companyId}/a/home") Home
    li.active HR
block content
  .container
    .row
      if user.pid.indexOf(2)>=0
        .col-xs-12.col-sm-6.col-md-3
          .panel.panel-primary
            .panel-heading 
              b Accounts
            .panel-body
              if user.pid.indexOf(2)>=0    
                div.padding5
                  a(href="/c/#{company.companyId}/hr/listAccounts") Add/Edit Accounts
      if user.pid.indexOf(3)>=0 || user.pid.indexOf(4)>=0
        .col-xs-12.col-sm-6.col-md-3
          .panel.panel-primary
            .panel-heading 
              b Timesheets
            .panel-body
              if user.pid.indexOf(3)>=0
                div.padding5 
                  a(href="/c/#{company.companyId}/hr/listTimesheets") Approve Timesheets
              if user.pid.indexOf(4)>=0
                div.padding5 
                  a(href="/c/#{company.companyId}/hr/listTsTasks") Add/Edit Tasks   


      if user.pid.indexOf(5)>=0
        .col-xs-12.col-sm-6.col-md-3
          .panel.panel-primary
            .panel-heading 
              b Company
            .panel-body
              if user.pid.indexOf(5)>=0
                div.padding5 
                  a(href="/c/#{company.companyId}/hr/listDepartments") Add/Edit Departments                    
