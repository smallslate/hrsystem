extends /templates/homeLayout
block head
  link(href="/css/signin.css" rel="stylesheet")
  title Sign in
  script(src="/javascript/hrsystem/utils/signin.js")
block content
  .container
    h2.form.form-signin-heading.alignCenter One account. All your data @ Office
    form.form-signin(action="/signIn" method="post")
      input.form-control#username(placeholder="SignIn Id" required autofocus name="username")
      input.form-control#password(type="password" name="password" placeholder="Password" required)
      button.btn.btn-lg.btn-primary.btn-block(type="submit" onClick="validateForm()") Sign in
