          a(href="/c/#{company.companyId}/signin")
            img(src="https://s3.amazonaws.com/hrsystem/companies_logo/#{company.companyImg}" height="50")
          button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-collapse")
            span.sr-only Toggle navigation
